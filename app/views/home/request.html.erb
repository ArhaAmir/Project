
<div class="req-parent">

  <h2>Request</h2>

  <div class="underline"></div>

  <div class = "form">
  <% userdum = Userdum.new%>
  <%= form_with model: userdum do |f| %>

    <div class="form-group">
      <%= f.label :name, class: "label" %>
      <%= f.text_field :name, placeholder: "John Doe", required: true, class: "input" %>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, placeholder: "someone@email.com", required: true, class: "input" %>
    </div>

    <div class="form-group">
      <%= f.label :contact, class: "label" %>
      <%= f.number_field :contact, placeholder: "+92xxx-xxxxxxx", required: true, class: "input" %>
    </div>


    <div class="form-group">
      <%= f.label :request, class: "label" %>
      <%= f.text_area :requestContent, rows: 6, placeholder: "Enter your request content", required: true, class: "input" %>
    </div>

    <div class="form-group">
      <%= f.submit "Submit Request", class: "submit" %>
    </div>
  <% end %>
  </div>

</div>